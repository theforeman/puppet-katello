### File managed with puppet ###
## Module: puppet-katello

:katello:
  :rest_client_timeout: <%= @rest_client_timeout %>

  :content_types:
    :file: <%= @enable_file %>
    :yum: <%= @enable_yum %>
    :deb: <%= @enable_deb %>
    :puppet: <%= @enable_puppet %>
    :docker: <%= @enable_docker %>
    :ostree: <%= @enable_ostree %>

  :candlepin:
    :url: <%= @candlepin_url %>
    :oauth_key: "<%= @candlepin_oauth_key %>"
    :oauth_secret: "<%= @candlepin_oauth_secret %>"
    :ca_cert_file: <%= @candlepin_ca_cert %>

  :candlepin_events:
    :ssl_cert_file: <%= @candlepin_events_ssl_cert %>
    :ssl_key_file: <%= @candlepin_events_ssl_key %>
    :ssl_ca_file: <%= @candlepin_ca_cert %>

  :katello_applicability: true

<% if @pulp2_support %>
  :pulp:
    :url: <%= @pulp_url %>
    :ca_cert_file: <%= @pulp_ca_cert %>
<% end %>
