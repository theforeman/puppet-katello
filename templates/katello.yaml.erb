### File managed with puppet ###
## Module: puppet-katello

:katello:
  <%- unless [nil, :undefined, :undef, ''].include?(@cdn_ssl_version) -%>
  :cdn_ssl_version: <%= @cdn_ssl_version %>
  <%- end -%>
  :rest_client_timeout: 3600

  :post_sync_url: https://<%= @fqdn %><%= @deployment_url %>/api/v2/repositories/sync_complete?token=<%= @post_sync_token %>

  :candlepin:
    :url: <%= @candlepin_url %>
    :oauth_key: <%= @oauth_key %>
    :oauth_secret: <%= @oauth_secret %>
    :ca_cert_file: <%= @candlepin_ca_cert %>

  :pulp:
    :url: <%= @pulp_url %>
    :oauth_key: <%= @oauth_key %>
    :oauth_secret: <%= @oauth_secret %>
    :ca_cert_file: <%= @pulp_ca_cert %>

  :qpid:
    :url: <%= @qpid_url %>
    :subscriptions_queue_address: <%= @candlepin_event_queue %>

<%- unless [nil, :undefined, :undef, ''].include?(@proxy_host) -%>
  :cdn_proxy:
    :host: <%= @proxy_host %>
    :port: <%= @proxy_port %>
    :user: <%= @proxy_username %>
    :password: <%= @proxy_password %>
<%- end -%>
